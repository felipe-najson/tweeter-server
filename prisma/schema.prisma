// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tweet {
  createdAt DateTime  @default(now())
  id        String    @id @default(uuid())
  content   String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  comments  Comment[]
  likes     User[]    @relation("UserLikes")
  retweets  User[]    @relation("UserRetweets")
  bookmarks User[]    @relation("UserBookmarks")
}

model User {
  createdAt   DateTime  @default(now())
  id          String    @id @default(uuid())
  username    String    @unique
  name        String
  email       String    @unique
  password    String
  birthDate   DateTime
  description String
  image       String
  followedBy  User[]    @relation("UserFollows")
  following   User[]    @relation("UserFollows")
  tweets      Tweet[]
  comments    Comment[]
  bookmarks   Tweet[]   @relation("UserBookmarks")
  likes       Tweet[]   @relation("UserLikes")
  retweets    Tweet[]   @relation("UserRetweets")
}

model Comment {
  createdAt DateTime @default(now())
  id        String   @id @default(uuid())
  content   String
  likes     Int      @default(0)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  tweet     Tweet    @relation(fields: [tweetId], references: [id])
  tweetId   String
}
