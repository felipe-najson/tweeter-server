// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tweet {
  createdAt DateTime  @default(now())
  id        String    @id @default(uuid())
  content   String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  comments  Comment[]
  likes     User[]    @relation("UserLikes")
  retweets  User[]    @relation("UserRetweets")
  bookmarks User[]    @relation("UserBookmarks")
}

model User {
  createdAt   DateTime  @default(now())
  id          String    @id @default(uuid())
  username    String    @unique
  name        String
  email       String    @unique
  password    String
  birthDate   DateTime
  description String
  image       String
  background  String    @default("https://images.unsplash.com/photo-1682686578842-00ba49b0a71a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1080&q=50")
  followedBy  User[]    @relation("UserFollows")
  following   User[]    @relation("UserFollows")
  tweets      Tweet[]
  comments    Comment[]
  bookmarks   Tweet[]   @relation("UserBookmarks")
  likes       Tweet[]   @relation("UserLikes")
  retweets    Tweet[]   @relation("UserRetweets")
}

model Comment {
  createdAt DateTime @default(now())
  id        String   @id @default(uuid())
  content   String
  likes     Int      @default(0)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  tweet     Tweet    @relation(fields: [tweetId], references: [id])
  tweetId   String
}
